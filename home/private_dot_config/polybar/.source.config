[bar/base]

; Color and Decoration
background = ${colors.base00}
foreground = ${colors.base05}

line-size = 2
line-color = ${colors.base05}

border-size = 3
border-color = ${colors.base00}

; Fonts
font-0 = siji:size=9:antialias=false
font-1 = Iosevka Nerd Font:size=10;2

[bar/top]
; Monitor
monitor = ${env:MONITOR:}
; i3 sucks
override-redirect = true
wm-restack = i3

; Dimensions
fixed-center = true

width = 100%:-22
height = 34
offset-x = 11
offset-y = 10

padding = 0
module-margin-left = 1
module-margin-right = 2

radius-top = 0.0
radius-bottom = 0.0

; Color and Decoration
background = ${colors.base00}
foreground = ${colors.base05}

line-size = 2
line-color = ${colors.base05}

border-size = 3
border-color = ${colors.base00}

; Fonts
font-0 = siji:size=9:antialias=false
font-1 = Iosevka Nerd Font:size=10;2

; Modules
modules-left = launcher workspaces
modules-center = spotify spotify-prev spotify-play-pause spotify-next
modules-right = time pulseaudio battery sysmenu

; Tray
tray-position = none
tray-detached = false
tray-maxsize = 16
tray-background = ${colors.base00}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
tray-scale = 1.0

; Functionality
cursor-click = pointer
cursor-scroll = ns-resize
; Enable support for inter-process messaging
enable-ipc = true

[bar/bottom]
monitor = ${env:MONITOR:}

bottom = true
width=100%
height=18px

; Color and Decoration
background = ${colors.base00}
foreground = ${colors.base05}

line-size = 2
line-color = ${colors.base05}

border-size = 3
border-color = ${colors.base00}

; Fonts
font-0 = siji:size=9:antialias=false
font-1 = Iosevka Nerd Font:size=10;2

padding = 2
module-margin = 2

modules-left = ip
modules-center =
modules-right = memory filesystem

[module/filesystem]
type = internal/fs

mount-0 = /
fixed-values = true

label-mounted =  %percentage_used%% used, %free% free

[module/memory]
type = internal/memory

interval = 3

format = <label> <bar-used>
label =  %gb_used%/%gb_total%

bar-used-indicator =
bar-used-width = 16
bar-used-foreground-0 = ${colors.base0B}
bar-used-foreground-1 = ${colors.base0A}
bar-used-foreground-2 = ${colors.base09}
bar-used-foreground-3 = ${colors.base08}
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = ${colors.base03}


[module/ip]
type = internal/network
interface = wlp3s0
label-connected =  %local_ip%
label-disconnected =  disconnected

[module/workspaces]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
enable-click = true


ws-icon-0 = 1:Home;
ws-icon-1 = 2:Study;
ws-icon-2 = 3:Code;
ws-icon-3 = 4:Search;
ws-icon-4 = 5:Documentation;
ws-icon-5 = 6:Servers;
ws-icon-6 = 7:Scratch;
ws-icon-7 = 8:Communication;
ws-icon-8 = 9:Music;
ws-icon-default = 

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.base05}
label-mode-background = ${colors.base01}
label-mode-underline = ${colors.base09}

label-focused = %icon%
label-focused-padding = 2
label-focused-foreground = ${colors.base05}
label-focused-background = ${colors.base01}
label-focused-underline = ${colors.base0B}

label-unfocused = %icon%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.base03}
label-unfocused-background = ${colors.base00}

label-visible = %icon%
label-visible-padding = 2
label-visible-foreground = ${colors.base05}
label-visible-background = ${colors.base00}

label-urgent = %icon%
label-urgent-padding = 2
label-urgent-foreground = ${colors.base07}
label-urgent-background = ${colors.base03}
label-urgent-underline = ${colors.base0A}

[module/battery]
type = internal/battery
adapter = ACAD
poll-interval = 1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.base08}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.base09}
ramp-capacity-2 = 
ramp-capacity-2-foreground = ${colors.base0A}
ramp-capacity-3 = 
ramp-capacity-3-foreground = ${colors.base0B}
;ramp-capacity-4 = 
;ramp-capacity-4-foreground = ${colors.base0B}

animation-charging-0 = 
animation-charging-0-foreground = ${colors.base05}
animation-charging-1 = 
animation-charging-1-foreground = ${colors.base05}
animation-charging-2 = 
animation-charging-2-foreground = ${colors.base05}
animation-charging-3 = 
animation-charging-3-foreground = ${colors.base05}
;animation-charging-4 = 
;animation-charging-4-foreground = ${colors.base05}
animation-charging-framerate = 500

[module/battery0]
inherit = module/battery
battery = BAT0

[module/battery1]
inherit = module/battery
battery = BAT1

[module/time]
type = internal/date

[module/launcher]
type = custom/text
content = 

content-background = ${colors.base0B}
content-foreground = ${colors.base00}
content-padding = 2

[module/sysmenu]
type = custom/text
content = 

content-background = ${colors.base0B}
content-foreground = ${colors.base00}
content-padding = 2

[module/time]
label =  %date%  %time%
;time-alt = %Y-%m-%d%
time = %H:%M
date = %Y-%m-%d%

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <ramp> <label>
label = " %percentage%%"

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>

label-volume = "%percentage%%"
label-muted = " muted"

ramp-volume-0 =  ""
ramp-volume-1 = ""
ramp-volume-2 = ""

[module/title]
type = internal/xwindow

format = <label>
format-padding = 4

label = %title%
label-maxlen = 50

[module/spotify]
type = custom/script
tail = true

format-prefix = " "
format = <label>

exec = ~/.config/polybar/polybar-spotify/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
exec = echo ""
format = <label>
click-left = playerctl previous spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo ""
initial = 1
click-left = playerctl play-pause spotify

[module/spotify-next]
type = custom/script
exec = echo ""
format = <label>
click-left = playerctl next spotify

[setttings]
screenchange-reload = true


